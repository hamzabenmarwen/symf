{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
    <i class="fas fa-exchange"></i> Liste des Emprunts
{% endblock %}

{% block main %}
    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Utilisateur</th>
                        <th>Livre</th>
                        <th>Date Emprunt</th>
                        <th>Date Retour Prévue</th>
                        <th>Date Retour Effective</th>
                        <th>Statut</th>
                    </tr>
                </thead>
                <tbody>
                    {% for emprunt in emprunts %}
                        <tr>
                            <td>{{ emprunt.id }}</td>
                            <td>
                                <i class="fas fa-user"></i> 
                                {{ emprunt.utilisateur.email }}
                            </td>
                            <td>
                                <i class="fas fa-book"></i> 
                                <strong>{{ emprunt.livre.titre }}</strong>
                            </td>
                            <td>{{ emprunt.dateEmprunt|date('d/m/Y') }}</td>
                            <td>{{ emprunt.dateRetourPrevue|date('d/m/Y') }}</td>
                            <td>
                                {% if emprunt.dateRetourEffective %}
                                    <span class="badge bg-success">
                                        {{ emprunt.dateRetourEffective|date('d/m/Y') }}
                                    </span>
                                {% else %}
                                    <span class="badge bg-warning">En cours</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if emprunt.dateRetourEffective %}
                                    <span class="badge bg-success">
                                        <i class="fas fa-check"></i> Rendu
                                    </span>
                                {% elseif emprunt.dateRetourPrevue < date() %}
                                    <span class="badge bg-danger">
                                        <i class="fas fa-exclamation-triangle"></i> En retard
                                    </span>
                                {% else %}
                                    <span class="badge bg-info">
                                        <i class="fas fa-clock"></i> En cours
                                    </span>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center text-muted">
                                Aucun emprunt enregistré
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}