{% extends 'base.html.twig' %}

{% block title %}Se connecter - Bibliothèque{% endblock %}

{% block body %}
<div class="container d-flex align-items-center justify-content-center" style="min-height: calc(100vh - 90px);">
    <div class="card shadow-lg" style="max-width: 440px; width: 100%; border-radius: 16px;">
        <div class="card-body p-5">
            <div class="text-center mb-4">
                <h1 class="h3 mb-2 fw-bold">Bienvenue</h1>
                <p class="text-muted">Veuillez vous connecter à votre compte</p>
            </div>

            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle"></i>
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="alert alert-info">
                        <i class="fas fa-check-circle"></i>
                        Vous êtes connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>
                    </div>
                {% endif %}

                <div class="form-group">
                    <label for="inputEmail" class="form-label">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>

                <div class="form-group">
                    <label for="inputPassword" class="form-label">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="_remember_me" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">Se souvenir de moi</label>
                    </div>
                    <a href="{{ path('app_forgot_password') }}" class="text-primary small">Mot de passe oublié ?</a>
                </div>

                <button class="btn btn-primary w-100" type="submit">
                    <i class="fas fa-sign-in-alt"></i> Se connecter
                </button>
            </form>

            <div class="text-center pt-4 border-top">
                <p class="text-muted">Pas encore de compte ? <a href="{{ path('app_register') }}" class="fw-semibold">S'inscrire</a></p>
            </div>
        </div>
    </div>
</div>
{% endblock %}